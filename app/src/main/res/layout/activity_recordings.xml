<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecordingsActivity">

    <LinearLayout
        android:layout_width="417dp"
        android:layout_height="649dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="205dp"
            android:layout_height="450sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/HeartRatetextView"
                android:layout_width="205sp"
                android:layout_height="75sp"
                android:text="Heart Rate"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/HeartVariabilitytextview"
                android:layout_width="match_parent"
                android:layout_height="75sp"
                android:text="Heart Variability"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/BloodPressureviewtext"
                android:layout_width="match_parent"
                android:layout_height="75sp"
                android:text="Blood Pressure"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/BloodOxygen"
                android:layout_width="match_parent"
                android:layout_height="75sp"
                android:text="Bloodoxygen"
                android:textAlignment="center"
                android:textSize="24sp" />


            <TextView
                android:id="@+id/TemperaturetextView"
                android:layout_width="match_parent"
                android:layout_height="75sp"
                android:text="Temperature"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/bloodsugartextView"
                android:layout_width="match_parent"
                android:layout_height="75sp"
                android:text="Blood Sugar"
                android:textAlignment="center"
                android:textSize="24sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="450sp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/heartrateNumberDecimal"
                android:layout_width="205sp"
                android:layout_height="75sp"
                android:ems="10"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/heartvariabilityNumberDecimal"
                android:layout_width="match_parent"
                android:layout_height="75sp"
                android:ems="10"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/bloodpressureNumberDecimal"
                android:layout_width="match_parent"
                android:layout_height="75sp"
                android:ems="10"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/bloodoxygenNumberDecimal"
                android:layout_width="match_parent"
                android:layout_height="75sp"
                android:ems="10"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/tempNumberDecimal"
                android:layout_width="match_parent"
                android:layout_height="75sp"
                android:ems="10"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/bloodsuggarNumberDecimal"
                android:layout_width="match_parent"
                android:layout_height="75sp"
                android:ems="10"
                android:inputType="numberDecimal" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="RECORDINGS"
        android:textAlignment="center"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.049" />

</androidx.constraintlayout.widget.ConstraintLayout>